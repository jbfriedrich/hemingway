{{!< default}}
{{> header background=@site.cover_image}}

<main class="flex-shrink-0 flex-grow-1 d-flex align-items-center justify-content-center">
    <div class="row flex-grow-1">
        <div class="container">
            <div class="post-feed col-md-7 mx-auto mb-5">
                {{#foreach posts}}
                {{> "index-post-entry"}}
                {{/foreach}}
                {{#if pagination}}
                {{pagination}}
                {{/if}}
            </div>
        </div>
    </div>
</main>
