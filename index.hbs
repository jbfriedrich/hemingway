{{!< default}}
<div class="d-flex justify-content-between align-items-center py-5 h-100 w-100">
    <div class="post-feed container">
        <div class="row post-row d-flex flex-column justify-content-center align-items-center">
            <div class="post-column col-12 col-md-10 col-lg-8 p-0" data-infinite-scroll='{ "path": ".page-next", "append": ".post", "history": false, "hideNav": ".main-pagination" }'>
            {{#foreach posts}}
                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-entry"}}
            {{/foreach}}
            </div>
        </div>
    </div>
</div>
