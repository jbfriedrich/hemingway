{
    "name": "Hemingway",
    "description": "My very own version of a clean, minimal default theme for the Ghost publishing platform",
    "demo": "https://jason.re",
    "version": "2020.08.1",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "author": {
        "name": "Jason Friedrich",
        "email": "blog@jason.re",
        "url": "https://jason.re"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jbfriedrich/hemingway.git"
    },
    "bugs": "https://github.com/jbfriedrich/hemingway/issues",
    "contributors": "https://github.com/jbfriedrich/heminway/graphs/contributors",
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 6,
        "image_sizes": {
            "author": {
                "width": 36,
                "height": 36
            },
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
