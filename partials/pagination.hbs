<!-- Primary pagination begins here -->
<nav class="main-pagination pb-5 px-5" aria-label="Main page navigation">
    <ul class="pagination m-0 p-0 px-md-3 justify-content-center align-items-center">
        <li class="page-item flex-grow-1{{^if prev}} disabled{{/if}}"><a class="page-link page-previous rounded-sm text-center text-nowrap" href="{{page_url prev}}">&laquo; Newer</a></li>
        <li class="page-item text-secondary small px-3 px-md-5"><span class="d-none d-md-inline">Page&nbsp;</span>{{page}} of {{pages}}</li>
        <li class="page-item flex-grow-1{{^if next}} disabled{{/if}}"><a class="page-link{{#if next}} page-next{{/if}} rounded-sm text-center text-nowrap" href="{{page_url next}}">Older &raquo;</a></li>
    </ul>
</nav>
