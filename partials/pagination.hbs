<nav class="pagination text-uppercase d-flex flex-row justify-content-center align-items-stretch mb-4" role="navigation">
    {{#if prev}}
        <a class="newer-posts mr-4" href="{{page_url prev}}">&larr; Newer Posts</a>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts ml-4" href="{{page_url next}}">Older Posts &rarr;</a>
    {{/if}}
</nav>
