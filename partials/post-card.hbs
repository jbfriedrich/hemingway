<div class="card shadow mb-4 {{post_class}}{{#unless feature_image}} no-image{{/unless}}" style="">
  {{#has tag="video"}}
    {{content}}
    <div class="card-footer text-muted d-flex flex-md-row justify-content-between">
      <span class="text-capitalize">{{#if primary_tag}}{{primary_tag.name}}{{else}}{{reading_time}}{{/if}}</span>
      <a href="{{url}}" class="card-link">{{date format="MMMM D, YYYY" timeago="true"}}</a>
    </div>
  {{else}}
  {{#has tag="link"}}
    {{content}}
  {{else}}
    {{!-- <img src="{{feature_image}}" class="card-img-top" alt="Card Header"> --}}
    {{#if feature_image}}<a href="{{url}}"><div class="card-img-top card-feature-img" style="background-image: url('{{feature_image}}');"></div></a>{{/if}}
    <div class="card-body">
      {{#if primary_tag}}<small><strong class="card-subtitle mb-0 text-primary text-uppercase">{{primary_tag.name}}</strong></small>{{/if}}
      <h4 id="post-title" class="card-title"><a class="card-title" href="{{url}}">{{title}}</a></h4>
      <p class="card-text text-muted">{{excerpt words=33}}</p>
    </div>
    <div class="card-footer text-muted d-flex flex-md-row justify-content-between">
      <span>{{reading_time}}</span>
      <a href="{{url}}" class="card-link">{{date format="MMMM D, YYYY" timeago="true"}}</a>
    </div>
  {{/has}}
  {{/has}}
</div>
