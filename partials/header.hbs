<header class="hero{{^if no_hero}} bg-light{{/if}}{{#if no_hero}} mt-5{{/if}}"{{^if no_hero}} style="height: 40vh;{{#if background}} background: linear-gradient(rgba(0,0,0,0.75),rgba(0,0,0,0.5)),url({{background}}); background-position: 50% 50%; background-repeat: no-repeat; background-size: cover;{{/if}}"{{/if}}>

    <div class="container-fluid d-flex flex-column justify-content-center align-items-center h-100">
        {{#if print_default}}

            {{#if @site.logo}}
                <img src="{{@site.logo}}">
                {{#if @site.description}}
                    <p class="{{#if background}}text-white {{else}}color-grayblack {{/if}}font-weight-bold lead">{{@site.description}}</p>
                {{/if}}
            {{else}}
                <h1 class="{{#if background}}text-white {{else}}color-grayblack {{/if}}font-weight-bold display-4">{{@site.title}}</h1>
                {{#if @site.description}}
                    <p class="{{#if background}}text-white-50 {{else}}text-black-50 {{/if}}font-weight-bold lead">{{@site.description}}</p>
                {{/if}}
            {{/if}}

        {{else}}

            {{#is 'index'}}
                {{#if @site.logo}}
                    <img src="{{@site.logo}}">
                    {{#if @site.description}}
                        <p class="{{#if background}}text-white {{else}}color-grayblack {{/if}}font-weight-bold lead">{{@site.description}}</p>
                    {{/if}}
                {{else}}
                    <h1 class="{{#if background}}text-white {{else}}color-grayblack {{/if}}font-weight-bold display-4">{{@site.title}}</h1>
                    {{#if @site.description}}
                        <p class="{{#if background}}text-white-50 {{else}}text-black-50 {{/if}}font-weight-bold lead">{{@site.description}}</p>
                    {{/if}}
                {{/if}}
            {{/is}}

            {{#is 'tag'}}
                <h1 class="{{#if background}}text-white {{else}}color-grayblack {{/if}}font-weight-bold text-capitalize">{{name}} <span class="badge badge-primary">{{total_posts}}</span></h1>
                {{#if description}}<p class="{{#if background}}text-white-50 {{else}}text-black-50 {{/if}}font-weight-bold lead">{{description}}</p>{{/if}}
            {{/is}}

            {{#is 'page'}}
                <h1 class="{{#if background}}text-white {{else}}color-grayblack {{/if}}font-weight-bold display-4">{{title}}</h1>
            {{/is}}  

            {{#is 'post'}}
                <h4 class="post-date{{#if background}} text-white-70{{else}} text-black-50{{/if}} font-weight-bold" >{{date published_at format="MMMM DD, YYYY"}}</h4>
                <h1 class="{{#if background}}text-white {{else}}color-grayblack {{/if}}font-weight-bold display-4">{{title}}</h1>
            {{/is}}

        {{/if}}
    </div>

</header>
