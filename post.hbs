{{!< default}}
<div class="full-post d-flex flex-column h-100">
{{#post}}
    {{!-- Blog post template --}}
    {{^has tag='#link,#micro'}}
        {{!-- This is a full, long post --}}
        <div class="container flex-grow-1 flex-shrink-0">
            {{#if feature_image}}
            <div class="row mt-5">
                <div class="header-image col-12 mx-auto px-md-0">
                    <img class="img" alt="Header Image" src="{{feature_image}}">
                </div>
            </div>
            {{/if}}
            <div class="row {{^if feature_image}}mt-md-5{{/if}}">
                <div class="col-12 col-lg-8 p-md-0 mx-auto bg-white{{#if feature_image}} header-content-wrap{{/if}}">
                    <div class="post-content{{#if feature_image}} mt-3 mt-lg-5 px-lg-5{{else}} mt-5{{/if}}">
                        <h5 class="post-date mt-0 mb-0 text-black-50" >{{date published_at format="MMMM DD, YYYY"}}</h5>
                        <h1 class="post-title mt-2 mt-md-3 mb-4 mb-md-5 color-grayblack display-4">{{title}}</h1>
                        {{content}}
                        {{> "taglist" }}
                        {{> "author-info"}}
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        {{!-- This is a micro post or a link post --}}
        <div class="post-content container">
            <div class="row">
                <div class="post-micro col-md-7 mt-lg-5 mx-auto">
                    <div class="post-micro-header my-5 text-black-50 text-center text-uppercase">{{date published_at format="LLL"}}</div>
                    <div class="post-micro-text">
                        {{content}}
                    </div>
                    {{> "author-info"}}
                </div>
            </div>
        </div>
    {{/has}}
{{/post}}
</div>
